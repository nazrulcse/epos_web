<div class="clearfix body-wrapper row reset-padding">
  <div class="col-md-12">
    <div class="bg-box sign-in-box clearfix">
      <div class="circle-logo">
        <i class="fa fa-lock fa-5x"></i>
      </div>
      <div class="col-md-12 signin-inputs-wrapper clearfix">
        <h1 class="sign-in-title"><%= t 'devise.invitations.edit.header' %></h1>
        <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, class:'form-vertical' } do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :invitation_token %>
            <% if f.object.class.require_password_on_accepting %>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon fa fa-info"></span>
                    <%= f.text_field :first_name, class:'form-control input-field-height', placeholder: 'First Name' %>
                  </div>

                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon fa fa-info"></span>
                    <%= f.text_field :last_name, class:'form-control input-field-height', placeholder: 'Last Name' %>
                  </div>

                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon fa fa-key"></span>
                    <%= f.password_field :password, class:'form-control input-field-height', placeholder: 'Password' %>
                  </div>

                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon fa fa-key"></span>
                    <%= f.password_field :password_confirmation, class:'form-control input-field-height', placeholder: 'Confirm Password' %>
                  </div>

                </div>
            <% end %>
            <div class="form-group btn-section">
              <%= f.submit t("devise.invitations.edit.submit_button"), class:'sign-in-btn' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>