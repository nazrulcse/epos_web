<div class="">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <i class="fa fa-newspaper-o"></i>
    <h4 class="modal-title">
      Change Password of <%= @employee.full_name %>
    </h4>
  </div>
  <%= form_for(@employee, url: reset_password_employee_path(@employee), html: {method: :patch}) do |f| %>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12 col-lg-12">
          <div class="form-group">
            <%= f.label :password, '*Password' %>
            <%= f.password_field :password, autofocus: true, data: {required: true}, class: 'form-control modal-input-field-height reset-border-radius', placeholder: 'Enter new password' %>
            <p></p>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, '*Confirm Password' %>
            <%= f.password_field :password_confirmation, autofocus: true, data: {required: true}, class: 'form-control modal-input-field-height reset-border-radius', placeholder: 'Retype password' %>
            <p></p>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <div class="pull-right">
        <%= f.submit 'Set Password', class: 'btn btn-primary' %>
        <div class="btn btn-default" data-dismiss='modal'>Close</div>
      </div>
    </div>
  <% end %>
</div>
