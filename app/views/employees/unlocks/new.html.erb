<div class="panel panel-default">
  <div class="panel-heading">
    <h2>Resend unlock instructions</h2>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post,class:'form-vertical' }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, for:'email' %><br />
          <%= f.email_field :email, autofocus: true, id:'email', class:'form-controll' %>
        </div>

        <div class="form-group">
          <%= f.submit "Resend unlock instructions", class:'btn btn-success' %>
        </div>
        <div class="form-group">
          <%= render "employees/shared/links" %>
        </div>
    <% end %>
  </div>
</div>