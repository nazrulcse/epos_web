<% if @employee == current_employee %>
popupMessage("You are deleting yourself. Isn't it hard!!!!???", 'alert-warning');
$('#global-modal').modal('hide');
<% else %>
$('#employee-<%= @employee.id %>').replaceWith('<%= escape_javascript(render 'employee_row', employee: @employee).html_safe %>');
$('#global-modal').modal('hide');
popupMessage("Employee has been deactivated successfully", 'alert-success');
<% end %>
