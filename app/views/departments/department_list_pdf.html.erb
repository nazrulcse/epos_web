<table class="table action-table beaccount-table table-responsive table-hover table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Description</th>
    <th>Employee</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody id="department_list">
  <% @departments.each do |department| %>
      <tr class="departments_<%= department.id %>">
        <td><%= department.name %></td>
        <td><%= department.address %></td>
        <td><%= truncate(department.description, length: 100) %></td>
        <td><%= department.employees.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>