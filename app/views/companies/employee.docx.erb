<div class="header-wrapper">
  <h4> <%= @company.name %>'s Departments</h4>
</div>
<div class="secondary-color">
  <div class="content-body-wrapper">
    <div class="row content-body">
      <div class="panel table-warapper">
        <div class="table-warapper-body">
          <table class="table action-table beaccount-table tablesorter table-responsive table-hover table-striped">
            <thead>
            <tr>
              <th>Name</th>
              <th>Designation</th>
              <th>Email</th>
              <th>Address</th>
              <th>Mobile</th>
            </tr>
            </thead>
            <tbody id="employee-list">
            <% @departments.each do |department| %>
                <% department.employees.each do |employee| %>
                    <% if employee.invitation_token.blank? && employee.is_active == true %>
                        <tr class="employees_<%= employee.id %>">
                          <td><%= employee.full_name %></td>
                          <td><%= employee.designation.name if employee.designation.present? %></td>
                          <td><%= employee.email %></td>
                          <td><%= employee.address %></td>
                          <td><%= employee.mobile %></td>
                        </tr>
                    <% end %>
                <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>