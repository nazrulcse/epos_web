<div class="clearfix">  <div class="pull-right">    <%= link_to profile_companies_path, remote: true, class: 'btn btn-danger reset-border-radius' do %>        <i class="fa fa-times"></i>    <% end %>  </div></div><%= form_for @company, remote: true, html: {class: 'form-vertical', id: 'company-edit-form'} do |f| %>    <div class="row">      <div class="col-md-6">        <div class="form-group">          <div class="thumbnail">            <%= image_tag @company.image.present? ? @company.image_url(:thumb) : 'company/company.png', id: 'company-logo', class: "img-responsive company-logo" %>            <div class="upload-button btn btn-default reset-margin reset-padding">              <span class="fa fa-photo fa-2x"></span>              <%= f.file_field :image, class: 'file-upload-btn' %>            </div>          </div>        </div>      </div>      <div class="col-md-6">        <div class="form-group">          <%= f.label :name %>          <%= f.text_field :name, class: 'form-control input-field' %>        </div>        <div class="form-group">          <%= f.label :mobile, 'Contact Number' %>          <%= f.text_field :mobile, class: 'form-control input-field' %>        </div>      </div>    </div>    <div class="row">      <div class="form-group col-md-6">        <%= f.label :contact_email %>        <%= f.text_area :contact_email, class: 'form-control input-field' %>      </div>      <div class="form-group col-md-6">        <%= f.label :address %>        <%= f.text_area :address, class: 'form-control input-field' %>      </div>    </div>    <div class="row">      <div class="form-group col-md-6">        <%= f.label :city %>        <%= f.text_field :city, class: 'form-control input-field' %>      </div>      <div class="form-group col-md-6">        <%= f.label :state %>        <%= f.text_field :state, class: 'form-control input-field' %>      </div>    </div>    <div class="row">      <div class="form-group col-md-6">        <%= f.label :zip_code %>        <%= f.text_field :zip_code, class: 'form-control input-field' %>      </div>      <div class="form-group col-md-6">        <%= f.label :country %>        <%= country_select(:company, :country, {selected: f.object.country, include_blank: 'Select a country'}, { class: 'form-control custom-chosen input-field', id: 'company-country'}) %>      </div>    </div>    <div class="form-group col-md-12 input-field">      <div class="text-center">        <%= f.submit 'Save Changes', class: 'btn btn-success' %>      </div>    </div><% end %><script type="text/javascript">    $(function(){        $('#company_image').change(function () {            var reader = new FileReader();            reader.onload = function (e) {                $('#company-logo').attr('src', e.target.result)            };            reader.readAsDataURL(this.files[0]);        });        $('#company-edit-form').submit(function(e){            e.stopPropagation();            e.preventDefault();            $(this).ajaxSubmit({                url: $(this).attr('action'),                dataType: 'script',                method: $(this).attr('method')            });        });    });</script>