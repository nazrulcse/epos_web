<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <i class="fa fa-newspaper-o"></i>
  <h4 class="modal-title"> Add new Designation </h4>
</div>
<%= form_for(@designation, remote: true, html: {class: 'form-vertical', id: 'designation-form'}) do |f| %>
    <div class="modal-body">

      <%= f.hidden_field :department_id %>
      <div class="form-group">
        <%= f.label :name, '*Title', for: 'name' %>
        <%= f.text_field :name, id: 'name', class: 'form-control', data: {required: true} %>
      </div>

      <div class="form-group">
        <%= f.label "Responsibilities", for: 'description' %>
        <%= f.text_area :description, id: 'description', class: 'form-control', rows: '3' %>
      </div>
      <div class="checkbox">
        <%= f.label :is_active do %>
            <%= f.check_box :is_active, {value: true, checked: true, class: 'form-control'} %>
            <span class="cr">
                    <i class="cr-icon fa fa-check"></i>
                  </span>
            Active
        <% end %>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit 'Submit', class: 'btn btn-primary designation-submit' %>
      <div class="btn btn-default" data-dismiss="modal"> Cancel</div>
    </div>
<% end %>
<script>
    $(function () {
        $('#designation-form').syftValidator();
    });
</script>
