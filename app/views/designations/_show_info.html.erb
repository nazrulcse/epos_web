<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span></button>
  <h3 class="modal-title"> <%= @designation.name %> </h3>
</div>
<div class="modal-body">
  <div class="designation-content">
    <div class="row">
      <div class="heading">
        <h4>Name</h4>
      </div>
      <div class="content">
          <%= @designation.name %>
      </div>
    </div>
    <div class="row">
      <div class="heading">
        <h4>Responsibilities</h4>
      </div>
      <div class="content">
        <%= @designation.description %>
      </div>
    </div>
    <div class="row">
      <div class="heading">
        <h4>Status</h4>
      </div>
      <div class="content">
        <% if @designation.is_active %>
            Active
        <% else %>
            Not Active
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="modal-footer">
  <div class="btn btn-default" data-dismiss="modal"> Close</div>
</div>