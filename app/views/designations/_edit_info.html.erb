<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title"> Add new Designation </h4>
</div>
<%= form_for(@designation, remote: true,  html:{ method: :put , role: 'form', class:'form-vertical'}) do |f|%>
    <div class="modal-body">
      <div class="form-group">
        <%= f.label :name, 'Name', for:'name' %>
        <%= f.text_field :name, id:'name', class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description, 'Description', for:'description' %>
        <%= f.text_area :description, id:'description', class:'form-control' %>
      </div>

      <div class="checkbox">
        <%= f.label :is_active do %>
            <%= f.check_box :is_active, class: 'form-control' %>
            <span class="cr">
                    <i class="cr-icon fa fa-check"></i>
                  </span>
            Active
        <% end %>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit 'Submit', class:'btn btn-primary designation-submit' %>
      <div class="btn btn-default" data-dismiss="modal"> Cancel</div>
    </div>
<% end %>