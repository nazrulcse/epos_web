<div class="row reset-padding">
  <div class="content-wrapper" id="rule-content">
    <div class="header-wrapper">
      <div class="header-container clearfix">
        <h4 class="title-section">
          Expense Groups
        </h4>

        <div class="action-section">
          <%= link_to new_expenses_group_path, class: 'btn btn-info' do %>
              New Group
          <% end %>
        </div>
      </div>
    </div>
    <div class="content-body-wrapper secondary-color full-content-wrapper" id="provident-fund-rule-content">
      <% if @groups.present? %>
          <div class="row actions-button">
            <div class="add-more-rule clearfix">
              <%= link_to new_expenses_group_path, class: 'btn btn-default pull-right' do %>
                  <i class="fa fa-plus-circle"></i> Add New Group
              <% end %>
            </div>
          </div>
          <div class="row content-body">
            <table class="table action-table beaccount-table tablesorter table-responsive table-hover table-striped">
              <thead>
              <tr>
                <th>Group ID</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
              </tr>
              </thead>
              <tbody>
              <% @groups.each do |group| %>
                  <tr>
                    <td> #<%= group.id %> </td>
                    <td><%= group.name %> </td>
                    <td><%= group.description %> </td>
                    <td class="actions">
                      <%= link_to edit_expenses_group_path(group), class: 'btn warning-color' do %>
                          <i class="fa fa-pencil-square-o"></i>
                      <% end %>
                      <%= link_to expenses_group_path(group), class: 'btn danger-color', method: :delete, data: {confirm: 'Are you sure?'} do %>
                          <i class="fa fa-times"></i>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
      <% else %>
          <div class="text-center table-cell">
            <p>
              Current department don't have any Expense Group. <%#= link_to 'Learn more', '#', class: 'link' %>
              <!--<i class="fa fa-info-circle btn btn-info reset-border-radius" data-toggle='popover' data-placement='top' title="Provident Fund Account" data-content="Click on the create new one button to create provident fund account then it will show the account  list  "></i>-->
            </p>
            <%= link_to new_expenses_group_path, class: 'btn btn-default reset-border-radius' do %>
                <i class="fa fa-plus-circle"></i> Add new one
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>
