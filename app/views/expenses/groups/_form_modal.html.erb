<%= render 'shared/modal_header', modal_title: 'New Group' %>
<%= form_for(@group, remote: true) do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control reset-border-radius', data: {required: true} %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control reset-border-radius' %>
    </div>
  </div>

  <div class="modal-footer">
    <div class="pull-right">
      <%= f.submit class: 'btn btn-primary' %>
      <div class="btn btn-default" data-dismiss='modal'>Cancel</div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
    $(function () {
        $('#new_expenses_group').syftValidator();
    });
</script>