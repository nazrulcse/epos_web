<div class="process-invoice-list">
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th> Sr.No</th>
      <th> Invoice Ref</th>
      <th> Invoice Date</th>
      <th> Method</th>
      <th> Collection</th>
      <th> Amount</th>
      <th> Refund</th>
      <th> Discount</th>
      <th> Commission</th>
      <th> Paid</th>
      <th> Balance</th>
      <th> Pay</th>
      <th> Pay Amount</th>
    </tr>
    </thead>
    <tbody>
    <% refund_total = 0 %>
    <% discount_total = 0 %>
    <% customer.active_invoice.each do |invoice| %>
        <% if invoice.due_amount > 0 %>
            <%# refund_total += invoice.total_refund %>
            <%# discount_total += invoice.total_discount %>
            <%= render 'invoice', invoice: invoice %>
        <% end %>
    <% end %>
    </tbody>
    <tfoot>
    <tr>
      <th colspan="5" class="right-aligned"> Total:</th>
      <th> <%= customer.active_invoice.sum(:amount) %></th>
      <th> <%= refund_total %></th>
      <th> <%= discount_total %></th>
      <th> </th>
      <th> <%= customer.active_invoice.map(&:paid).sum %></th>
      <th> <%= customer.active_invoice.map(&:due_amount).sum %></th>
    </tr>
    </tfoot>
  </table>
</div>