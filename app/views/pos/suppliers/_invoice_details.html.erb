<%= render 'shared/modal_header', modal_title: "Purchase Order Payments" %>
<div class="modal-body supplier-history">
  <table class="table table-striped table-condensed">
    <thead class='panel panel-success'>
    <tr>
      <th>ID</th>
      <th>Method</th>
      <th>Amount</th>
      <th>Received At</th>
      <th>Status</th>
    </tr>
    </thead>
    <tbody>
    <% invoice.payments.each do |payment| %>
      <% if payment.id.present? %>
        <tr>
          <td> <%= link_to payment.id, pos_suppliers_payment_path(payment) %> </td>
          <td><%= payment.payment_method %></td>
          <td><%= payment.amount %></td>
          <td><%= format_date(payment.date) %></td>
          <td><%= payment.status %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
    <tfoot>
    <tr>
      <th colspan="2"></th>
      <th colspan="3"><%= invoice.payments.sum(:amount) %></th>
    </tr>
    </tfoot>
  </table>
</div>

<div class="modal-footer">
  <div class="pull-right">
    <div class="btn btn-default" data-dismiss='modal'>Cancel</div>
  </div>
</div>