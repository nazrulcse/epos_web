<% if @category.errors.any? %>
popupMessage('<%= escape_javascript( errors_to_message_string(@category.errors)).html_safe %>', 'error');
<% else %>
$("#pos_product_category_id").append("<option value=<%= @category.id %>> <%= @category.name %></option>");
$('#pos_product_category_id').trigger("chosen:updated");
$('#global-modal').modal('hide');
popupMessage('Category saved successfully.', 'success');
<% end %>