<ul class="pull-right">
  <li class="top-menu-dropdown">
    <a href="" class="dropdown-toggle" data-toggle="dropdown">
      <i class="fa fa-cog fa-fw fz18"></i>
    </a>

    <ul class="top-menu-dropdown-content last-dropdown">
      <li>
        <%= link_to profile_companies_path, class: 'text-right' do %>
            <% if current_company.present? && current_company.image.present? %>
                <%= image_tag(current_company.image_url(:thumb), height: 20, width: 20) %> Company Settings
            <% else %>
                <i class="fa fa-sliders"></i> Company Settings
            <% end %>
        <% end %>
      </li>
      <li>
        <%= link_to department_path(current_department), class: 'text-right' do %>
            <% if current_department.image.present? %>
                <%= image_tag(current_department.image_url(:thumb), height: 20, width: 20) %> Department
                Settings
            <% else %>
                <i class="fa fa-briefcase"></i> Department Settings
            <% end %>

        <% end if current_department.present? %>
      </li>
    </ul>
  </li>
</ul>




